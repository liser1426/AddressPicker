<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- slide bar 有效内容背景 -->
    <attr name="backgroundColor" format="color|reference" />
    <!-- slide bar　描边 -->
    <attr name="strokeColor" format="color|reference" />
    <!-- slide bar 文字颜色 -->
    <attr name="textColor" format="color|reference" />
    <!-- slide bar　文字大小 -->
    <attr name="textSize" format="dimension" />
    <!-- slide bar 选中文字颜色 -->
    <attr name="selectTextColor" format="color|reference" />
    <!-- slide bar 选中文字大小 -->
    <attr name="selectTextSize" format="dimension" />
    <!-- slide bar　选中时候提示文字颜色 -->
    <attr name="hintTextColor" format="color|reference" />
    <!-- slide bar　选中时候提示文字大小 -->
    <attr name="hintTextSize" format="dimension" />
    <!-- slide bar　选中时候提示圆形半径 -->
    <attr name="hintCircleRadius" format="dimension" />
    <!-- slide bar　选中时候提示圆形颜色 -->
    <attr name="hintCircleColor" format="color|reference" />
    <!-- slide bar　选中时候提示背景形状 -->
    <attr name="hintShape" format="enum" >
        <enum name="circle" value="0" />
        <enum name="rectangle" value="1" />
    </attr>
    <!-- slide bar　选中时候波浪颜色 -->
    <attr name="waveColor" format="color|reference" />
    <!-- slide bar　选中时候波浪半径 -->
    <attr name="waveRadius" format="dimension" />
    <!-- slide bar　里面文字上＋下padding -->
    <attr name="contentPadding" format="dimension" />
    <!-- slide bar　上+下+右padding -->
    <attr name="barPadding" format="dimension" />
    <!-- slide bar　宽度 -->
    <attr name="barWidth" format="dimension" />

    <declare-styleable name="AZWaveSideBarView">
        <!-- slide bar 有效内容背景 -->
        <attr name="backgroundColor" />
        <!-- slide bar　描边 -->
        <attr name="strokeColor" />
        <!-- slide bar 文字颜色 -->
        <attr name="textColor" />
        <!-- slide bar　文字大小 -->
        <attr name="textSize" />
        <!-- slide bar 选中文字颜色 -->
        <attr name="selectTextColor" />
        <!-- slide bar 选中文字大小 -->
        <attr name="selectTextSize" />
        <!-- slide bar　选中时候提示文字颜色 -->
        <attr name="hintTextColor" />
        <!-- slide bar　选中时候提示文字大小 -->
        <attr name="hintTextSize" />
        <!-- slide bar　选中时候提示圆形半径 -->
        <attr name="hintCircleRadius" />
        <!-- slide bar　选中时候提示圆形颜色 -->
        <attr name="hintCircleColor" />
        <!-- slide bar　选中时候波浪颜色 -->
        <attr name="waveColor" />
        <!-- slide bar　选中时候波浪半径 -->
        <attr name="waveRadius" />
        <!-- slide bar　里面文字上＋下padding -->
        <attr name="contentPadding" />
        <!-- slide bar　上+下+右padding -->
        <attr name="barPadding" />
        <!-- slide bar　宽度 -->
        <attr name="barWidth" />
    </declare-styleable>

    <declare-styleable name="AZSideBarView">
        <!-- slide bar 有效内容背景 -->
        <attr name="backgroundColor" />
        <!-- slide bar　描边 -->
        <attr name="strokeColor" />
        <!-- slide bar 文字颜色 -->
        <attr name="textColor" />
        <!-- slide bar　文字大小 -->
        <attr name="textSize" />
        <!-- slide bar 选中文字颜色 -->
        <attr name="selectTextColor" />
        <!-- slide bar 选中文字大小 -->
        <attr name="selectTextSize" />
        <!-- slide bar　选中时候提示文字颜色 -->
        <attr name="hintTextColor" />
        <!-- slide bar　选中时候提示文字大小 -->
        <attr name="hintTextSize" />
        <!-- slide bar　选中时候提示圆形半径 -->
        <attr name="hintCircleRadius" />
        <attr name="hintShape" />
        <!-- slide bar　选中时候提示圆形颜色 -->
        <attr name="hintCircleColor" />
        <!-- slide bar　里面文字上＋下padding -->
        <attr name="contentPadding" />
        <!-- slide bar　上+下+右padding -->
        <attr name="barPadding" />
        <!-- slide bar　宽度 -->
        <attr name="barWidth" />
    </declare-styleable>
    <!-- indicator -->
    <!-- 设置显示器颜色 -->
    <attr name="tls_indicator_color" format="color" />
    <attr name="tls_indicator_gradient_color_start" format="color" />
    <attr name="tls_indicator_gradient_color_end" format="color" />
    <attr name="tls_indicator_need_gradient" format="boolean" />
    <!-- 设置显示器高度 -->
    <attr name="tls_indicator_height" format="dimension" />
    <!-- 设置显示器固定宽度 -->
    <attr name="tls_indicator_width" format="dimension" />
    <!-- 设置显示器margin,当indicator_width大于0,无效 -->
    <attr name="tls_indicator_margin_left" format="dimension" />
    <attr name="tls_indicator_margin_top" format="dimension" />
    <attr name="tls_indicator_margin_right" format="dimension" />
    <attr name="tls_indicator_margin_bottom" format="dimension" />
    <!-- 设置显示器圆角弧度-->
    <attr name="tls_indicator_corner_radius" format="dimension" />
    <!-- 设置显示器上方还是下方,只对圆角矩形有用-->
    <attr name="tls_indicator_gravity" format="enum">
        <enum name="TOP" value="48" />
        <enum name="BOTTOM" value="80" />
    </attr>
    <!-- 设置显示器为常规|三角形|背景色块|-->
    <attr name="tls_indicator_style" format="enum">
        <enum name="NORMAL" value="0" />
        <enum name="TRIANGLE" value="1" />
        <enum name="BLOCK" value="2" />
    </attr>
    <!-- 设置显示器长度与titlse一样长,只有在STYLE_NORMAL并且indicatorWidth小于零有效-->
    <attr name="tls_indicator_width_equal_title" format="boolean" />
    <!-- 设置显示器支持动画-->
    <attr name="tls_indicator_anim_enable" format="boolean" />
    <!-- 设置显示器动画时间-->
    <attr name="tls_indicator_anim_duration" format="integer" />
    <!-- 设置显示器支持动画回弹效果-->
    <attr name="tls_indicator_bounce_enable" format="boolean" />

    <!-- underline -->
    <!-- 设置下划线颜色 -->
    <attr name="tls_underline_color" format="color" />
    <!-- 设置下划线高度 -->
    <attr name="tls_underline_height" format="dimension" />
    <!-- 设置下划线上方还是下方-->
    <attr name="tls_underline_gravity" format="enum">
        <enum name="TOP" value="48" />
        <enum name="BOTTOM" value="80" />
    </attr>

    <!-- divider -->
    <!-- 设置分割线颜色 -->
    <attr name="tls_divider_color" format="color" />
    <!-- 设置分割线宽度 -->
    <attr name="tls_divider_width" format="dimension" />
    <!-- 设置分割线的paddingTop和paddingBottom -->
    <attr name="tls_divider_padding" format="dimension" />

    <!-- tab -->
    <!-- 设置tab的paddingLeft和paddingRight -->
    <attr name="tls_tab_padding" format="dimension" />
    <!-- 设置tab大小等分 -->
    <attr name="tls_tab_space_equal" format="boolean" />
    <!-- 设置tab固定大小 -->
    <attr name="tls_tab_width" format="dimension" />

    <!-- titlse -->
    <!-- 设置字体大小 -->
    <attr name="tls_textsize" format="dimension" />
    <attr name="tls_textSelsize" format="dimension" />
    <!-- 设置字体选中颜色 -->
    <attr name="tls_textSelectColor" format="color" />
    <!-- 设置字体未选中颜色 -->
    <attr name="tls_textUnselectColor" format="color" />
    <!-- 设置字体加粗 -->
    <attr name="tls_textBold" format="enum">
        <enum name="NONE" value="0" />
        <enum name="SELECT" value="1" />
        <enum name="BOTH" value="2" />
    </attr>
    <!-- 设置字体全大写 -->
    <attr name="tls_textAllCaps" format="boolean" />
    <attr name="tls_textBottom" format="boolean" />
    <attr name="tls_text_bottom_margin" format="dimension" />

    <declare-styleable name="SlidingTabLayout">
        <!-- indicator -->
        <attr name="tls_indicator_color" />
        <attr name="tls_indicator_gradient_color_start" />
        <attr name="tls_indicator_gradient_color_end" />
        <attr name="tls_indicator_need_gradient" />
        <attr name="tls_indicator_height" />
        <attr name="tls_indicator_width" />
        <attr name="tls_indicator_margin_left" />
        <attr name="tls_indicator_margin_top" />
        <attr name="tls_indicator_margin_right" />
        <attr name="tls_indicator_margin_bottom" />
        <attr name="tls_indicator_corner_radius" />
        <attr name="tls_indicator_gravity" />
        <attr name="tls_indicator_style" />
        <attr name="tls_indicator_width_equal_title" />

        <!-- underline -->
        <attr name="tls_underline_color" />
        <attr name="tls_underline_height" />
        <attr name="tls_underline_gravity" />

        <!-- divider -->
        <attr name="tls_divider_color" />
        <attr name="tls_divider_width" />
        <attr name="tls_divider_padding" />

        <!-- tab -->
        <attr name="tls_tab_padding" />
        <attr name="tls_tab_space_equal" />
        <attr name="tls_tab_width" />

        <!-- titlse -->
        <attr name="tls_textsize" />
        <attr name="tls_textSelsize" />
        <attr name="tls_textSelectColor" />
        <attr name="tls_textUnselectColor" />
        <attr name="tls_textBold" />
        <attr name="tls_textAllCaps" />
        <attr name="tls_textBottom" />
        <attr name="tls_text_bottom_margin" />
    </declare-styleable>
</resources>